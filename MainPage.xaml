<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Arghiroiu_Raluca_Lab7.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="woman_programmer.jpg"
                SemanticProperties.Description="Woman programmer typing code"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Hello, World!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="I am a Full-Stack Developer and this is my first .NET MAUI App!"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Short description about app author"
                FontSize="18"
                HorizontalOptions="Center" />

            <Label
                Text="Image by jcomp on Freepik"
                SemanticProperties.HeadingLevel="Level3"
                SemanticProperties.Description="Attribution details for the image's author"
                FontSize="18"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
